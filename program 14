 //Write a C program to take an integer as input from
//the user and find if it is positive integer

#include<stdio.h>
int main(){

    int n;

    printf("Enter an integer : ");
    scanf("%d",&n);

    if(n>0){

        printf("The number you have entered is a positive integer");
    }else{
        printf("The number you have entered is a negetive integer");
    }

    return 0;
}
